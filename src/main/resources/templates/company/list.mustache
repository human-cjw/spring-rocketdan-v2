{{> layout/header}}

<div class="bg-light py-5">
    <div class="weapp-container-company-list">
        <div class="weapp-main-wrapper-company-list">

            <div class="weapp-profile-grid-company-list">
                {{#models}}
                    <div class="weapp-profile-card-company-list">
                        {{#logoImageUrl}}
                            <img src="{{logoImageUrl}}" class="weapp-company-logo-company-list"
                                 onerror="this.src='/images/default-logo.png'"/>
                        {{/logoImageUrl}}
                        {{^logoImageUrl}}
                            <img src="https://image.rocketpunch.com/company/1803/1/yellephant_logo.png?s=100x100&t=inside"
                                 class="weapp-company-logo-company-list"/>
                        {{/logoImageUrl}}

                        <div class="weapp-company-name-company-list">
                            <a href="/company/{{id}}" style="text-decoration: none; color: inherit;">
                                {{nameKr}}
                            </a>
                        </div>
                        <div class="weapp-company-desc-company-list">{{oneLineIntro}}</div>
                    </div>
                {{/models}}
            </div>
        </div>
        <!-- 오른쪽: 사이드바 -->
        <div class="weapp-sidebar-company-list">

            {{^isCompany}}
                <div class="weapp-register-box-company-list">
                    <a href="/company/save-form" style="text-decoration: none;">
                        <button>기업 프로필 무료 등록</button>
                    </a>
                </div>
            {{/isCompany}}

            <div class="weapp-search-box-company-list">
                <h3>기업 검색</h3>
                <input type="text" placeholder="검색어 입력"/>
            </div>

        </div>

        <!-- 페이지네이션 -->
        <div class="weapp-pagination-company-list">
            <button class="weapp-active-company-list"><</button>
            <button>1</button>
            <button>2</button>
            <button>3</button>
            <button>...</button>
            <button>5</button>
            <button>></button>
        </div>
    </div>

    {{> layout/footer}}
