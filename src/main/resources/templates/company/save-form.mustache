{{> layout/header }}

<div class="py-5">
    <div class="weapp-reset-company-save">
        <div class="weapp-container-company-save">
            <div class="weapp-form-wrapper-company-save">
                <h2 class="weapp-form-title-company-save">기업 등록</h2>
                <hr/>
                <form action="/company/save" method="post" class="weapp-form-company-save">
                    <label>한글 기업명</label>
                    <input type="text" name="nameKr" placeholder="한글 기업명 입력" value="한국기업명"/>

                    <label>영문 기업명</label>
                    <input type="text" name="nameEn" placeholder="영문 기업명 입력" value="English Company Name"/>

                    <label>한 줄 소개</label>
                    <input type="text" name="oneLineIntro" placeholder="한 줄 소개 입력" value="한 줄 소개 내용"/>

                    <label>기업소개</label>
                    <input type="text" name="introduction" placeholder="예: 국내 최대 비즈니스 네트워크" value="기업 소개 내용"/>

                    <label>설립일</label>
                    <input type="date" name="startDate" placeholder="설립일 입력"/>

                    <label>사업자등록번호</label>
                    <input type="text" name="businessNumber" placeholder="숫자만 입력" value="1234567890"/>

                    <label>기술 스택</label>
                    <div>
                        {{#model.techStacks}}
                            <label>
                                <input type="checkbox" name="techStack[]" value="{{name}}"/>
                                {{name}}
                            </label>
                        {{/model.techStacks}}
                    </div>

                    <label>기업 공식 이메일</label>
                    <input type="email" name="email" placeholder="이메일 입력" value="ssar@naver.com"/>

                    <label>문의 담당자</label>
                    <input type="text" name="contactManager" placeholder="담당자" value="ssar"/>

                    <label>대표연락처</label>
                    <input type="number" name="phone" placeholder="대표연락처" value="01012345678"/>

                    <label>대표자명</label>
                    <input type="text" name="ceo" placeholder="대표자명" value="ssar"/>

                    <label>사무실</label>
                    <input type="text" name="address" placeholder="사무실 주소" value="부산광역시 진구 중앙대로"/>

                    <label>산업 분야</label>
                    <div>
                        {{#model.workFields}}
                            <label>
                                <input type="radio" name="workFieldName" value="{{name}}"/>
                                {{name}}
                            </label>
                        {{/model.workFields}}
                    </div>

                    <div class="submit-btn-wrapper-company-save">
                        <button
                                type="submit"
                                class="weapp-submit-btn-company-save btn btn-primary"
                        >
                            등록
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

{{> layout/footer }}
