{{> layout/header }}

<div class="bg-light py-5">
    <form class="container my-5">
        <div class="text-center mb-4">
            <img
                    src="https://image.rocketpunch.com/images/user/user.png?s=200x200&t=cover"
                    class="rounded-circle shadow"
                    style="width: 100px; height: 100px"
                    alt="프로필 이미지"
            />
        </div>

        <div class="weapp-whitebox-body d-flex justify-content-center">
            <div class="card m-3 p-5 w-50">
                <div class="weapp-card-body">
                    <div
                            class="d-flex justify-content-between align-items-center mb-2"
                    >
                        <h3 class="fs-4 fw-semibold mb-0">계정 관리</h3>
                        <a
                                href="detail.html"
                                class="btn btn-outline-primary btn-sm mt-2"
                        >수정 완료
                        </a>
                    </div>
                    <div class="rounded border p-3 mt-4 w-500">
                        <div
                                style="
                                        display: flex;
                                        align-items: center;
                                        gap: 3rem;
                                    "
                        >
                            <div>닉네임</div>
                            <input
                                    style="width: auto"
                                    type="text"
                                    class="form-control-plaintext"
                                    placeholder="변경할 닉네임을 입력하세요."
                            />
                        </div>

                        <hr/>
                        <div
                                style="
                                        display: flex;
                                        gap: 2rem;
                                        align-items: center;
                                    "
                        >
                            <label>휴대전화</label>
                            <input
                                    style="width: auto"
                                    type="text"
                                    class="form-control-plaintext"
                                    placeholder="변경할 전화번호를 입력하세요."
                            />
                        </div>
                        <hr/>
                        <div
                                style="
                                        display: flex;
                                        align-items: center;
                                        gap: 2rem;
                                    "
                        >
                            <label>비밀번호</label>
                            <input
                                    style="width: auto"
                                    type="password"
                                    class="form-control-plaintext"
                                    placeholder="변경할 비밀번호를 입력하세요."
                            />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

{{> layout/footer }}