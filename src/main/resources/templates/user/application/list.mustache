{{> layout/header }}

<div class="bg-light py-5">
    <div class="container">
        <div class="row">
            <!-- 왼쪽 메뉴 -->
            <div class="col-md-3 mb-4" style="width: 20%">
                <div class="border rounded-3 bg-white p-3 shadow-sm">
                    <p class="fs-6 fw-bold mb-3">지원서 관리</p>
                    <ul class="nav nav-pills flex-column">
                        <li class="nav-item">
                            <a class="nav-link {{#isAll}}active{{/isAll}}" href="/user/application">모든 지원서</a>
                        </li>
                        <hr/>
                        <li class="nav-item">
                            <a class="nav-link {{#isApplied}}active{{/isApplied}}" href="/user/application?status=접수">서류
                                접수</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link {{#isReviewing}}active{{/isReviewing}}"
                               href="/user/application?status=검토">서류 검토중</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {{#isPassed}}active{{/isPassed}}" href="/user/application?status=합격">서류
                                합격</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {{#isRejected}}active{{/isRejected}}" href="/user/application?status=탈락">불합격</a>
                        </li>
                        <hr/>
                    </ul>
                </div>
            </div>

            <!-- 오른쪽 내용 -->
            <div class="col-md-9">
                <p class="fs-6 fw-bold mb-3">모든 지원서</p>
                <!-- 흰 네모박스 -->
                <div class="border rounded bg-white p-5 text-start" style="height: auto">
                    <!-- 샘플 1 시작 -->
                    {{#applicationManageDTOS}}
                        <div class="list-group" style="height: 50%; margin: 1rem">
                            <a href="/user/application/process/job/{{id}}" class="list-group-item
                            list-group-item-action">
                                <div class="d-flex" style="justify-content: space-between">
                                    <div class="d-flex align-items-center mb-3">
                                        <img
                                                src="https://image.rocketpunch.com/company/205394/archetype-research_logo_1734688840.png?s=100x100&t=inside"
                                                alt="아키타입 리서치 logo"
                                        />
                                        <div class="weapp-company">
                                            <div class="fs-5 fw-bold" style="margin: 1rem">
                                                {{job.title}}
                                            </div>
                                            <div class="fs-6 fw-nomal" style="margin: 1rem">
                                                {{company.nameKr}}
                                            </div>
                                            <div class="text-muted" style="margin: 1rem">
                                                {{job.careerLevel}}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="weapp-date" style="padding: 1rem">
                                        {{createdAt}}
                                    </div>
                                </div>
                            </a>
                        </div>
                    {{/applicationManageDTOS}}
                    <!-- 샘플 1 끝 -->
                </div>
                <!-- 흰 네모박스 -->
            </div>
        </div>
    </div>
</div>

{{> layout/footer }}