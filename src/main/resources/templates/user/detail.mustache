{{> layout/header }}

<div class="bg-light py-5">
    <main class="container my-5">
        <div class="text-center mb-4">
            <img
                    src="https://image.rocketpunch.com/images/user/user.png?s=200x200&t=cover"
                    class="rounded-circle shadow"
                    style="width: 100px; height: 100px"
                    alt="프로필 이미지"
            />
            <h5 class="mt-3">ssar</h5>
        </div>
        <!-- Nav Tab -->
        <ul class="nav nav-pills justify-content-center mt-4">
            <li class="nav-item">
                <a class="nav-link active" href="detail.html">정보</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="posts.html">게시물</a>
            </li>
        </ul>
        <hr/>
        <!-- Nav Tab 끝-->
        <div class="weapp-whitebox-body d-flex justify-content-center">
            <div class="card m-3 p-5 align-items-center w-60">
                <div class="weapp-card-body">
                    <div
                            class="d-flex justify-content-between align-items-center mb-2"
                    >
                        <h3 class="fs-4 fw-semibold mb-0">계정 관리</h3>
                        <a
                                href="update-form.html"
                                class="btn btn-outline-primary btn-sm mt-2"
                        >정보 수정
                        </a>
                    </div>
                    <form class="rounded border p-3 mt-4 w-500">
                        <div
                                style="
                                        display: flex;
                                        align-items: center;
                                        gap: 3rem;
                                    "
                        >
                            <div>이메일</div>
                            <input
                                    style="width: 150px"
                                    type="text"
                                    class="form-control-plaintext"
                                    placeholder="ssar@nate.com"
                                    readonly
                            />
                        </div>

                        <hr/>
                        <div
                                style="
                                        display: flex;
                                        gap: 2rem;
                                        align-items: center;
                                    "
                        >
                            <label>휴대전화</label>
                            <input
                                    style="width: auto"
                                    type="text"
                                    class="form-control-plaintext"
                                    placeholder="010-3442-9658"
                                    readonly
                            />
                        </div>
                        <hr/>
                        <div
                                style="
                                        display: flex;
                                        align-items: center;
                                        gap: 2rem;
                                    "
                        >
                            <label>비밀번호</label>
                            <input
                                    style="width: auto"
                                    type="password"
                                    class="form-control-plaintext"
                                    value="3333"
                                    readonly
                            />
                        </div>
                    </form>
                    <br/>
                    <h3 class="fs-4 fw-semibold">회원 탈퇴 신청</h3>
                    <div class="rounded border mt-4 p-3 w-500">
                        <div
                                style="
                                        display: flex;
                                        gap: 3rem;
                                        align-items: center;
                                    "
                        >
                            <p class="m-0">
                                탈퇴 후 모든 데이터가 삭제되며 복구할 수
                                없습니다.
                            </p>
                            <button class="btn btn-danger">
                                회원 탈퇴 신청
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

